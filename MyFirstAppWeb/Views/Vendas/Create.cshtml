@model MyFirstAppWeb.Models.Venda

@{
    ViewData["Title"] = "Create";
}

<h1>Registrar Venda</h1>

<h4>Venda</h4>
<hr />

<table>
    <thead>
        <tr>
            <th>Nº Cupom</th>
        </tr>
    </thead>
    <thead>
        <tr>
            <th>Vendedor</th>
            <th>Cliente</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th>
                <input type="text" class="vendedor-input" />
                <button type="button" class="btn btn-primary btn-sm" id="btnPesquisarVendedores">
